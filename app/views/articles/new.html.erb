<div class="new-article-container">
  <h1>New Article</h1>
  
  <%= form_with(model: @article, local: true, html: { class: "new-article-form" }) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
    
    <div class="form-group">
      <%= form.label :body, class: "form-label" %>
      <%= form.text_area :body, class: "form-control", placeholder: "Tell your story...", rows: 10 %>
    </div>
    
    <div class="actions">
      <%= form.submit "Publish", class: "submit-btn" %>
    </div>
  <% end %>
</div>
